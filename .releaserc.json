{
  "branches": ["main"],
  "plugins": [
    ["@semantic-release/commit-analyzer", {"preset": "conventionalcommits"}],
    ["@semantic-release/release-notes-generator", {"preset": "conventionalcommits"}],
    ["@semantic-release/changelog", {"changelogFile": "CHANGELOG.md"}],
    ["@semantic-release/exec", {
      "prepareCmd": "sed -i 's/Version: .*/Version: ${nextRelease.version}/' wp-hoptown-rental/wp-hoptown-rental.php && sed -i \"s/define( 'HOPTOWN_RENTAL_VERSION', '[^']*' );/define( 'HOPTOWN_RENTAL_VERSION', '${nextRelease.version}' );/\" wp-hoptown-rental/wp-hoptown-rental.php"
    }],
    ["@semantic-release/git", {
      "assets": ["CHANGELOG.md", "wp-hoptown-rental/wp-hoptown-rental.php"],
      "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
    }],
    ["@semantic-release/github", {}]
  ]
}
